<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BobtingActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="오 늘 의   밥 팅"
        android:textSize="30dp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/bobting_1_recommendbobting_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bobting_1_button_style"
        android:text="추 천  밥 팅"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/bobting_1_randombobting_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bobting_1_button2_style"
        android:text="랜 덤  밥 팅"
        android:textSize="40dp"
        android:gravity="center"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>