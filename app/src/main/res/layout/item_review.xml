<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF"
    android:padding="5dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/reviewed_user_id"
                android:layout_width="250dp"
                android:layout_height="27dp"
                android:padding="2dp"
                android:text="id : "
                android:singleLine="true"
                android:textColor="#03a9f4"/>
            <TextView
                android:id="@+id/reviewed_text"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:hint="작성된 리뷰."
                android:textSize="14dp"
                android:singleLine="true"/>
            <View
                android:layout_width="240dp"
                android:layout_height="2dp"
                android:background="#6F00"
                android:layout_marginBottom="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/reviewed_heart1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart"/>
                <ImageView
                    android:id="@+id/reviewed_heart2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart"/>
                <ImageView
                    android:id="@+id/reviewed_heart3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart"/>
                <ImageView
                    android:id="@+id/reviewed_heart4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart"/>
                <ImageView
                    android:id="@+id/reviewed_heart5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/reviewed_pic"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="#1000"/>

    </LinearLayout>

</LinearLayout>